//6. Dado dois lados de um triangulo informe seu per√≠metro

#include <stdio.h>
#include <math.h>

int main(void)
{
    
    int lado1, lado2;
    int lado3 = 0;
    int perimetro;
    
    fflush(stdin);
    printf("Insira o lado do triangulo:\n");
    scanf("%d", &lado1);
    
    fflush(stdin);
    printf("Insira o lado do triangulo:\n");
    scanf("%d", &lado2);
    
    lado3 = pow(lado1, 2) + pow(lado2, 2);
    lado3 = sqrt(lado3);
    
    perimetro = lado1 + lado2 + lado3;

    printf("O perimetro do triangulo eh:  %d\n", perimetro);
}
