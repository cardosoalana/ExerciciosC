// 1. Leia dois números informe sua soma e sua subtração

#include <stdio.h>

int main(void)
{
    
    int num1, num2;
    int soma, subtracao;
    
    fflush(stdin);
    printf("Insira um numero:\n");
    scanf("%d", &num1);
    
    fflush(stdin);
    printf("Insira mais um numero:\n");
    scanf("%d", &num2);
    
    soma = num1 + num2;
    subtracao = num1 - num2;
    
    printf("A soma eh:  %d\n", soma);
    printf("A subtracao eh:  %d\n", subtracao);
}
