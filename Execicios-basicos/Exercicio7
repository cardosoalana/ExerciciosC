//7. Dado o raio de uma circunferência calcule sua área (math.h)

#include <stdio.h>
#include <math.h>

int main(void)
{
    
    float raio;
    float pi = 3.14;
    float area;
    
    fflush(stdin);
    printf("Insira o raio da circunferencia:\n");
    scanf("%f", &raio);
    
    area = pi * pow(raio, 2);

    printf("A area da circunferencia eh:  %.2f\n", area);
}
